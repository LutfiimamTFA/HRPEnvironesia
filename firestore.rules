rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read their own profile.
    // Super admins can read any user profile.
    match /users/{userId} {
      allow read: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin';
      allow create: if request.auth.uid == userId;
      // Only super admins can update/delete user profiles directly.
      allow update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin';
    }
    
    // A catch-all rule for other collections.
    // For this starter kit, only super admins have broad access.
    // You should define more granular rules for other collections in a real application.
    match /{path=**}/documents/{document} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin';
    }
  }
}
